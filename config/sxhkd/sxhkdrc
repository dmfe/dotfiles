
# Basic binds
super + Return
	$TERMINAL -e /bin/bash --rcfile ~/.bash_profile
super + m
	$TERMINAL -e ncmpcpp
super + shift + f
	$TERMINAL -e ranger
super + shift + t
	$TERMINAL -e htop
super + c
	"${TERMINAL}" -e calc
super + shift + n
	nohup "${TERMINAL}" -e sh -c 'neofetch;read' >/dev/null &

super + Print
	import jpg:- | xclip -selection clipboard -t image/jpeg
super + t
	${SCRIPTS}/shutdown.sh
super + e
	${SCRIPTS}/dmenu-unicode.sh
super + shift + m
	${SCRIPTS}/dmenumount.sh
super + shift + x
	${SCRIPTS}/screen-locker.sh

super + alt + l
	pkill -SIGUSR1 sxhkd
ctrl + alt + k
	pkill -SIGRTMIN+5 i3blocks
